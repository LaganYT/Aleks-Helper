{
    "manifest_version": 3,
    "name": "InterALEKS",
    "version": "1.1",
    "description": "Enable Enter key for answer submission",
    "permissions": ["storage"],
    "host_permissions": ["https://*.aleks.com/*", "https://*.mheducation.com/*", "https://my.mheducation.com/*"], 
    "action": {
        "default_title": "InterALEKS Settings",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://*.aleks.com/*"],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "128": "icons/icon.png"
    }
}